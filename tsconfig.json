{
    "compilerOptions": {
        "jsx": "react",
        "module": "commonjs",
        "noImplicitAny": true,
        "outDir": "./build/",
        "preserveConstEnums": true,
        "removeComments": true,
        "target": "es2017",
        "types": ["jest", "node"],
        "allowSyntheticDefaultImports": true
    },
    "include": [
        "./jest-setup.ts",
        "./src/**/*.{ts,tsx}"
    ],
    "exclude": [
        "node_modules",
        "build",
    ]
}